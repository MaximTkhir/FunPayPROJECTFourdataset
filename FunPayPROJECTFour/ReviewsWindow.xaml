<Window x:Class="FunPayPROJECTFour.ReviewsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunPayPROJECTFour"
        mc:Ignorable="d"
        Title="ReviewsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ReviewsDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        <Button Content="Вернуться обратно" HorizontalAlignment="Center" Margin="0,356,0,0" VerticalAlignment="Top" Height="35" Width="190" Click="ButtonBackReviews_Click" Background="White" FontFamily="Arial Black" FontSize="16"/>
        <TextBox x:Name="SearchTextBox" Grid.Row="0" Margin="37,355,588,28" Text="Введите ключевое слово" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.472"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button Content="Поиск" Margin="211,356,505,26" Click="SearchButton_Click"/>
    </Grid>
</Window>
